<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg"

    tools:context="uk.androidtracker.gazetracker.gazetrackertabsdemo.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"


        app:layout_constraintVertical_bias="1.0" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_share"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:stateListAnimator="@null"
        android:visibility="invisible"
        android:scaleType="centerInside"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.909"
        app:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        app:srcCompat="@drawable/icons8share" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_gaze"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:fabSize="mini"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintVertical_bias="0.81"
        android:visibility="invisible"
        android:stateListAnimator="@null"

        app:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        app:srcCompat="@drawable/icons8eye" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_statistic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintVertical_bias="0.81"
        android:visibility="invisible"
        android:stateListAnimator="@null"

        app:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        app:srcCompat="@drawable/icons8increase" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_setting"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:fabSize="mini"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.909"
        android:visibility="invisible"
        android:stateListAnimator="@null"

        app:backgroundTint="@color/common_google_signin_btn_text_dark_default"
        app:srcCompat="@drawable/icons8settings" />


    <ImageButton
        android:id="@+id/fab_vk"
        android:layout_width="56dp"
        android:layout_height="56dp"

        android:adjustViewBounds="true"
        android:background="@drawable/sharebutton"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/icons8instagram"
        android:visibility="invisible"

        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintVertical_bias="0.81"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/fab_fb"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:adjustViewBounds="true"
        android:background="@drawable/sharebutton"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/icons8facebook"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintVertical_bias="0.81"
        />

    <ImageButton
        android:id="@+id/fab_tw"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:adjustViewBounds="true"
        android:background="@drawable/sharebutton"
        android:clickable="false"
        android:scaleType="fitCenter"
        android:src="@drawable/icons8twitter"
        android:visibility="invisible"

        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fab_go"
        android:layout_width="56dp"
        android:layout_height="56dp"


        android:adjustViewBounds="true"
        android:background="@drawable/sharebutton"
        android:clickable="false"

        android:scaleType="fitCenter"
        android:src="@drawable/icons8google"
        android:visibility="invisible"

        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="0.909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_main"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/main_button"
        android:src="@drawable/bean"
        android:padding="16dp"
        android:clickable="true"
        android:elevation="40dp"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

</android.support.constraint.ConstraintLayout>
